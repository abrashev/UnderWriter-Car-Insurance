/* Global styles */
* {
  margin: 0;
  font-family: "Arial";
}

body {
background-color: white;
}

h1 {
  padding-top: 1em;
}

/* Application layout classes */
.header {
  height: 5.0em;
  background-color: green;
  width: 100%;
}

.content {
  float:none;
  margin-left: 1em;
}

.locale {
  float:left;
  padding-top: 0.2em;
  font-size: 0.75em;
}

.flash_notice {
  color: #ccffaa;
}

.flash_error {
  color: #ff8899;
}

#flash_message {
  position: absolute;
  top: 1.2em;
  left: 0.5em;
}

.main-input-area{
  padding-top:1em;
  float: left;
  display:block;
}

.sub-input-area  {
  float:left;
  margin-right: 1em;
  margin-left: 2em;
  padding-top:1em;
  display:block;

  .checkboxes p {
    padding-bottom: 0.5em;
  }

  .checkboxes {
    margin-right: 0;
  }
}

/* Following is CSS for tabbing taken from: http://clagnut.com/sandbox/csstabs/*/

.navigation {

  ul {
    float:left;
    padding-left: 0.5em;
	padding-bottom: 1.5em;
    line-height: 0.7em;
    list-style: none;
	
  }

  li {
   
    float:left;
    margin: 0;
    padding-top: 0.7em;
    padding-bottom: 0.7em;
  }

  a {
   
    color: #000000;
    text-decoration: none;
    font-weight: bold;
    margin: 0;
    padding-left: 0.7em;
    padding-right: 0.7em;
  }

  .selected {
	
    background-color: #ffffff;
  }

  a:hover,
  a:active,
  a.here:link,
  a.here:visited {
    color: #ff0000;
  }

  a.here:link,
  a.here:visited {
    position: relative;
    z-index: 102;
  }
}

.login-form {
  float: none;
  text-align: center;
  div {
	padding-bottom: 0.7em;
    margin-left: 0.1em;
    margin-top: 0em;
  }

  p {
    color: #C5F1F9;
  }
}

.register {
  color: #aaaaaa;
  text-align: center;
  font-size: 0.75em;
  
  p {
    display: block;
    color: #C5F1F9;
    
    font-size: 1.25em;
  }

  a {
    color: #aaaaaa;
    display: block;
    text-decoration: none;
  }

  
  a:hover{
  text-decoration: underline;
  }
  a:link,
  a:active,
  a.here:link,
  a.here:visited {
    color: #777777;
  }
}

.list-line-even {
  background: #cccccc;
}

.list-line-odd {
  background: #dddddd;
}

/* Digg style pagination taken from mislav-will_paginate rails gem doc */
.digg_pagination {
  /*background: white;*/
  /* self-clearing method: */
}

.digg_pagination a, .digg_pagination span, .digg_pagination em {
  padding: .2em .5em;
  display: block;
  float: left;
  margin-right: 1px;
}

.digg_pagination span.disabled {
  color: #999;
  border: 1px solid #DDD;
}

.digg_pagination em.current {
  font-weight: bold;
  background: #2E6AB1;
  color: white;
  border: 1px solid #2E6AB1;
}

.digg_pagination a {
  text-decoration: none;
  color: #105CB6;
  border: 1px solid #9AAFE5;
}

.digg_pagination a:hover, .digg_pagination a:focus {
  color: #003;
  border-color: #003;
}

.digg_pagination .page_info {
  background: #2E6AB1;
  color: white;
  padding: .4em .6em;
  width: 22em;
  margin-bottom: .3em;
  text-align: center;
}

.digg_pagination .page_info b {
  color: #003;
  background: #6aa6ed;
  padding: .1em .25em;
}

.digg_pagination:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

* html .digg_pagination {
  height: 1%;
}

*:first-child+html .digg_pagination {
  overflow: hidden;
}

/* Error box and highlighting */

div {
  &.field, &.actions {
    margin-bottom: 10px;
  }
}

.field_with_errors {
  padding: 2px;
  background-color: red;
  display: table;
}

#error_explanation {
  width: 450px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 0;
  margin-bottom: 20px;
  background-color: #f0f0f0;
  h2 {
    text-align: left;
    font-weight: bold;
    padding: 5px 5px 5px 15px;
    font-size: 12px;
    margin: -7px;
    margin-bottom: 0px;
    background-color: #c00;
    color: #fff;
  }
  ul li {
    font-size: 12px;
    list-style: square;
  }
}

input{
cursor:pointer;
}

